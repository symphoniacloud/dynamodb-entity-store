{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    // ** Type Checking **
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // ** Interop **
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // ** Completeness **
    "skipLibCheck": true,

    "noEmit": true,
    "declaration": false
  }
}